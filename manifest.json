{
  "name": "AIF Google Search Results",
  "description": "AI-First search results for Google search results. Not a fan of hyperlinks? This plugin will only display the AI and FAQ results when searching on Google (when an AI Overview is available).",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.google.com/search*", "*://www.google.ca/search*", "*://google.com/search*", "*://google.ca/search*"],
      "js": ["./js/loader.js"],
      "css": ["./css/loader.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://www.google.com/search*", "*://www.google.ca/search*", "*://google.com/search*", "*://google.ca/search*"],
      "js": ["./js/inject.js"],
      "css": ["./css/inject.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "./js/service_worker.js"
  }
}